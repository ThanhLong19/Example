
<h1 class="title_h1" ><%= t(:sign_in, scope: [:sessions, :new]) %></h1>

<%= form_with url: sessions_path, local: true, class: "px-4 py-3" do |signin| %>
  <div class="mb-3">
    <%= signin.label t(:email, scope: [:password_resets, :new]), for: "exampleDropdownFormEmail1", class: "form-label" %>
    <%= signin.email_field :email, class: "form-control", id: "exampleDropdownFormEmail1", placeholder: "email@example.com" %>
  </div>
  <div class="mb-3">
    <%= signin.label t(:password, scope: [:password_resets, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= signin.password_field :password, class: "form-control", id: "exampleDropdownFormPassword1", placeholder: t(:password, scope: [:password_resets, :edit]) %>
  </div>
  <div class="mb-3">
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="dropdownCheck">
      <label class="form-check-label" for="dropdownCheck">
        <%= t(:remember_me, scope: [:sessions, :new]) %>
      </label>
    </div>
  </div>
  <%= signin.submit t(:sign_in, scope: [:sessions, :new]), class: "btn btn-success" %>
<% end %>
<div class="dropdown-divider"></div>
<%= link_to t(:forget_password, scope: [:password_resets, :new])+" ?", new_password_reset_path, class: "dropdown-item" %>