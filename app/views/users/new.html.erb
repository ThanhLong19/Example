<h1 class="title_h1">Create New User</h1>

<%= form_with model: @user, url: users_path, local: true do |new| %>
  <div class="mb-3">
    <%= new.label :name, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="mb-3">
    <%= new.label :email, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.email_field :email, class: "form-control", placeholder: "email@example.com" %>
  </div>
    <div class="mb-3">
    <%= new.label :birthday, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.date_field :birthday, class: "form-control", placeholder: "Birthday" %>
  </div>
  <div class="mb-3">
    <%= new.label :address, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.text_field :address, class: "form-control", placeholder: "Address" %>
  </div>
  <div class="mb-3">
    <%= new.label :password, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
    <div class="mb-3">
    <%= new.label :password_confirmation, for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
  </div>

  <%= new.submit "Sign Up", class: "btn btn-success"  %>
<% end %>