<h1 class="title_h1">Connect Google</h1>

<%= form_with model: @user, url: connection_google_users_path, local: true do |new| %>
  <div class="mb-3">
    <%= new.label t(".name"), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.text_field :name, class: "form-control", placeholder: t(".name") %>
  </div>

  <div class="mb-3">
    <%= new.label t(".address"), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.text_field :address, class: "form-control", placeholder: t(".address") %>
  </div>

  <div class="mb-3">
    <%= new.label t(".password"), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.password_field :password, class: "form-control", placeholder: t(".password") %>
  </div>

  <div class="mb-3">
    <%= new.label t(".password_confirmation"), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= new.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation") %>
  </div>
  <%= new.submit t(".submit"), class: "btn btn-success"  %>
<% end %>
