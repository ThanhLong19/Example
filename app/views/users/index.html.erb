<h1 class="title_h1"><%= t(".list_user") %></h1>

<% if current_user.admin? %>
  <%= link_to t(".create_user"), new_user_path, class: "btn btn-success", style: "margin-top: 50px" %>
<% end %>

<table class="table">
  <tr>
    <th><%= t(".name")%></th>
    <th><%= t(".email")%></th>
    <th><%= t(".birthday")%></th>
    <th><%= t(".address")%></th>
    <th><%= t(".action")%></th>
  </tr>

  <% @users.each do |users| %>
    <tr>
      <td><%= users.name %></td>
      <td><%= users.email %></td>
      <td><%= users.birthday %></td>
      <td><%= users.address %></td>
      <% if current_user.admin? %>
        <td>
          <%= link_to t(".profile"), user_path(users), class: "btn btn-success" %>
          <%= link_to t(".edit"), edit_user_path(users), class: "btn btn-success" %>
          <%= button_to t(".delete"), user_path(users), method: :delete, class: "btn btn-danger" %>
        </td>  
      <% else %>
        <% if current_user.id == users.id %>
          <td>
            <%= link_to t(".profile"), user_path(users), class: "btn btn-success" %>
          </td>
        <% end %>
      <% end %>  
    </tr>
  <% end %>
</table>