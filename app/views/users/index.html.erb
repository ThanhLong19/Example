<h1 class="title_h1"><%= t(:list_user, scope: [:layouts, :navbar]) %></h1>

<%= link_to t(:create_user, scope: [:users, :index]), new_user_path, class: "btn btn-success", style: "margin-top: 50px" %>

<table class="table">
  <tr>
    <th><%= t(:name, scope: [:users, :edit])%></th>
    <th><%= t(:email, scope: [:users, :edit])%></th>
    <th><%= t(:birthday, scope: [:users, :edit])%></th>
    <th><%= t(:address, scope: [:users, :edit])%></th>
    <th><%= t(:action, scope: [:users, :index])%></th>
  </tr>

  <% @user.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.birthday %></td>
      <td><%= user.address %></td>
      <td>
        <%= link_to t(:edit, scope: [:users, :index]), edit_user_path(user), class: "btn btn-success" %>
        <%= button_to t(:delete, scope: [:users, :index]), user_path(user), method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>