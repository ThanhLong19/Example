<h1 class="title_h1"><%= t(:edit_user, scope: [:users, :edit]) %></h1>

<%= form_with model: @user, url: user_path, local: true do |edit| %>
  <div class="mb-3">
    <%= edit.label t(:name, scope: [:users, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.text_field :name, class: "form-control", placeholder: t(:name, scope: [:users, :edit]) %>
  </div>
  <div class="mb-3">
    <%= edit.label t(:email, scope: [:password_resets, :new]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.email_field :email, class: "form-control", placeholder: "email@example.com" %>
  </div>
    <div class="mb-3">
    <%= edit.label t(:birthday, scope: [:users, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.date_field :birthday, class: "form-control", placeholder: t(:birthday, scope: [:users, :edit]) %>
  </div>
  <div class="mb-3">
    <%= edit.label t(:address, scope: [:users, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.text_field :address, class: "form-control", placeholder: t(:address, scope: [:users, :edit]) %>
  </div>
  <div class="mb-3">
    <%= edit.label t(:password, scope: [:password_resets, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.password_field :password, class: "form-control", placeholder: t(:password, scope: [:password_resets, :edit]) %>
  </div>
    <div class="mb-3">
    <%= edit.label t(:password_confirmation, scope: [:password_resets, :edit]), for: "exampleDropdownFormPassword1", class: "form-label" %>
    <%= edit.password_field :password_confirmation, class: "form-control", placeholder: t(:password_confirmation, scope: [:password_resets, :edit]) %>
  </div>

  <%= edit.submit t(:submit, scope: [:users, :edit]), class: "btn btn-success"  %>
<% end %>