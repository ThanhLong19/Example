<h1 style="text-align: center">Forget Password</h1>

<%= form_with url: password_reset_path, scope: :password_reset, local: true do |forget| %>
    <div class="mb-3">
         <%= forget.label :email, for: "exampleDropdownFormPassword1", class: "form-label" %>
        <%= forget.email_field :email, class: "form-control", id: "exampleDropdownFormEmail1", placeholder: "email@example.com" %>
    </div>
    <%= forget.submit "Submit", class: "btn btn-success"  %>
<% end %>
