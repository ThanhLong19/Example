<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to t(:company, scope: [:layouts, :navbar]), root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if !Current.user %>
          <li class="nav-item">
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t(:update_password, scope: [:layouts, :navbar]), edit_password_path(Current.user.id), class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to t(:list_user, scope: [:layouts, :navbar]), users_path, class: "nav-link active" %>
          </li>
        <% end %>
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="<%= t(:search, scope: [:layouts, :navbar]) %>" aria-label="Search">
        <button class="btn btn-outline-success" type="submit"><%= t(:search, scope: [:layouts, :navbar]) %></button>
      </form>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      </ul>
      <% if !Current.user %>
        <%= button_to t(:sign_in, scope: [:layouts, :navbar]), new_session_path, method: :get, class: "btn btn-success" %>
      <% else %>
        <%= button_to t(:logout, scope: [:layouts, :navbar]), session_path(Current.user.id), method: :delete, class: "btn btn-success" %>
      <% end %>
      <div class="btn-group language">
        <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <%= t(:language, scope: [:layouts, :navbar]) %>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li>            
            <%= link_to t(:english, scope: [:layouts, :navbar]), locale:"en" %> 
          </li>
          <li> 
            <%= link_to t(:japan, scope: [:layouts, :navbar]), locale:"ja" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>