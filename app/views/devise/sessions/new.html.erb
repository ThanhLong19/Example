<h1 class="title_h1" ><%= t(".sign_in") %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |signin| %>
  <div class="mb-3">
    <%= signin.label :email %><br />
    <%= signin.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= signin.label :password %><br />
    <%= signin.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= signin.check_box :remember_me %>
      <%= signin.label :remember_me %>
    </div>
  <% end %>
  
  <%= signin.submit "Log in", class: "btn btn-success" %>
<% end %>

<%= render "devise/shared/links" %>
