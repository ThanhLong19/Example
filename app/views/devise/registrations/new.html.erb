<h1 class="title_h1">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |new| %> 

  <div class="mb-3">
    <%= new.label :name %><br />
    <%= new.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:name).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= new.label :email %><br />
    <%= new.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:email).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= new.label :birthday %><br />
    <%= new.date_field :birthday, class: "form-control", autofocus: true, autocomplete: "birthday" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:birthday).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= new.label :address %><br />
    <%= new.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:address).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= new.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= new.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:password).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>  
  </div>

  <div class="mb-3">
    <%= new.label :password_confirmation %><br />
    <%= new.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    <div class="messages_errors">
      <% resource.errors.full_messages_for(:password).each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>  
  </div>

  <%= new.submit "Sign up", class: "btn btn-success" %>
<% end %>

<%= render "devise/shared/links" %>
